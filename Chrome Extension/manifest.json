{
    "name": "Web Cite",
    "version": "1.0",
    "description": "Cite the web",
    "permissions": ["activeTab", "declarativeContent", "storage", "https://*/"],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "web_accessible_resources" : [
        "bootstrap4/css/bootstrap.min.css"
    ],
    "page_action": {
        "default_popup": "citationForm.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "content_security_policy": "script-src 'self' https://addCloudFunctionEndpointURLHere; object-src 'self'",
    "manifest_version": 2
}